<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundeaeaea">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar2"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/rl_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/colorWhite">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_pic"
                    android:layout_width="@dimen/px90dp"
                    android:layout_height="@dimen/px90dp"
                    android:layout_margin="@dimen/px30dp"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/error"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@drawable/loading"
                    fresco:progressBarImage="@drawable/loading"
                    fresco:progressBarImageScaleType="centerInside"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px10dp"
                    android:layout_toRightOf="@+id/sdv_pic"
                    android:text="个性签名"
                    android:textColor="@color/colorText333333"
                    android:textSize="@dimen/fontSize15" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_name"
                    android:text="5天后过期"
                    android:textColor="@color/colorText999999"
                    android:textSize="@dimen/fontSize13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/sdv_pic"
                    android:background="@color/colorBackgroundeaeaea" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_xq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tag"
                android:background="@color/colorWhite"
                android:padding="@dimen/px30dp"
                android:text="我想设计一个签名"
                android:textColor="@color/colorText666666"
                android:textSize="@dimen/fontSize15" />

            <RelativeLayout
                android:id="@+id/rl_tag1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_xq"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/px30dp">

                <TextView
                    android:id="@+id/tv_xqsm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="需求说明："
                    android:textColor="@color/colorText666666"
                    android:textSize="@dimen/fontSize15" />

                <TextView
                    android:id="@+id/tv_xqsm_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_xqsm"
                    android:text="说明说明说明说明说明说明说说明说明说明说明说明说明说说明说明说明说明说明说明说说明说明说明说明说明说明说说明说明说明说明说明说明说明"
                    android:textColor="@color/colorText999999"
                    android:textSize="@dimen/fontSize15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tag2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tag1"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/px30dp">

                <TextView
                    android:id="@+id/tv_yysj_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间"
                    android:textColor="@color/colorText666666"
                    android:textSize="@dimen/fontSize15" />

                <TextView
                    android:id="@+id/tv_yysj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_toRightOf="@+id/tv_yysj_tag"
                    android:text="2017-05-11 10:25"
                    android:textColor="@color/colorText999999"
                    android:textSize="@dimen/fontSize15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tag3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tag2"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/px30dp">

                <TextView
                    android:id="@+id/tv_jssj_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:textColor="@color/colorText666666"
                    android:textSize="@dimen/fontSize15" />

                <TextView
                    android:id="@+id/tv_jssj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_toRightOf="@+id/tv_jssj_tag"
                    android:text="2017-05-20 10:25"
                    android:textColor="@color/colorText999999"
                    android:textSize="@dimen/fontSize15" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_tag4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tag3"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/px30dp">

                <TextView
                    android:id="@+id/tv_fwfs_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务方式"
                    android:textColor="@color/colorText666666"
                    android:textSize="@dimen/fontSize15" />

                <TextView
                    android:id="@+id/tv_fwfs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_toRightOf="@+id/tv_fwfs_tag"
                    android:text="线上服务"
                    android:textColor="@color/colorText999999"
                    android:textSize="@dimen/fontSize15" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_yysl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_tag4"
                android:layout_marginTop="1dp"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:paddingBottom="@dimen/px20dp"
                android:paddingTop="@dimen/px20dp"
                android:text="已有2位服务者应邀" />

            <ag.yinglingedu.com.xlibrary.widget.SListView
                android:id="@+id/lv_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/px30dp"
                android:paddingLeft="@dimen/px20dp"
                android:paddingRight="@dimen/px20dp"
                android:layout_below="@+id/tv_yysl"
                android:background="@color/colorBackgroundeaeaea"
                android:dividerHeight="@dimen/px30dp"
                android:divider="@null"
                ></ag.yinglingedu.com.xlibrary.widget.SListView>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>