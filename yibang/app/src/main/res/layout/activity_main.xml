<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_divider"
        android:background="@color/colorWhite"></FrameLayout>


    <TextView
        android:id="@+id/iv_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/ly_bottom"
        android:background="@color/colorBackground" />

    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll_homepage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_homepage"
                android:layout_width="@dimen/px74dp"
                android:layout_height="@dimen/px44dp"
                android:layout_marginTop="@dimen/px12dp"
                android:src="@mipmap/tab_hone_pre" />

            <TextView
                android:id="@+id/tv_homepage"
                android:layout_width="@dimen/px74dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px12dp"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/colorTextYellow"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_homepage"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hall"
                android:layout_width="@dimen/px74dp"
                android:layout_height="@dimen/px44dp"
                android:layout_marginTop="@dimen/px12dp"
                android:src="@mipmap/tab_dt" />

            <TextView
                android:id="@+id/tv_hall"
                android:layout_width="@dimen/px74dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px12dp"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="大厅"
                android:textColor="@color/colorTextGray"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_size_seat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_width="@dimen/px74dp"
                android:layout_height="@dimen/px44dp"
                android:layout_marginTop="@dimen/px12dp"
                android:src="@mipmap/tab_xx" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="@dimen/px74dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px12dp"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/colorTextGray"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_message"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="@dimen/px74dp"
                android:layout_height="@dimen/px44dp"
                android:layout_marginTop="@dimen/px12dp"
                android:src="@mipmap/tab_wd" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="@dimen/px74dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px12dp"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/colorTextGray"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/px130dp"
        android:layout_height="@dimen/px130dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/tab_add" />
</RelativeLayout>
