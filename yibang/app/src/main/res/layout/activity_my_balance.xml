<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    >

    <include layout="@layout/toolbar2" android:id="@+id/toolbar"></include>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="账户余额（元）"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px198dp"
        />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="1200.59"
        android:layout_below="@+id/tv_tag"
        android:layout_marginTop="@dimen/px58dp"
        android:layout_centerHorizontal="true"
        />
    
    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button_border_yellow_deep"
        android:layout_below="@+id/tv_money"
        android:layout_marginTop="@dimen/px278dp"
        android:text="充值"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="@dimen/px30dp"
        android:layout_marginRight="@dimen/px30dp"
        />
    <Button
        android:id="@+id/btn_withdraw_cash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button_yellow_border"
        android:layout_below="@+id/btn_recharge"
        android:layout_marginTop="@dimen/px30dp"
        android:text="提现"
        android:textSize="18sp"
        android:textColor="@color/coloBlack"
        android:layout_marginLeft="@dimen/px30dp"
        android:layout_marginRight="@dimen/px30dp"
        />
    
    <ImageView
        android:id="@+id/iv_divider"
        android:layout_width="@dimen/px2dp"
        android:layout_height="@dimen/px42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/px20dp"
        android:src="@mipmap/me_ye_sr"
        />
    <TextView
        android:id="@+id/tv_xsjc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新手教程"
        android:layout_toLeftOf="@id/iv_divider"
        android:layout_alignTop="@id/iv_divider"
        android:layout_alignBottom="@id/iv_divider"
        android:layout_marginRight="@dimen/px20dp"
        android:gravity="center"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tv_cjwt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常见问题"
        android:layout_toRightOf="@id/iv_divider"
        android:layout_alignTop="@id/iv_divider"
        android:layout_alignBottom="@id/iv_divider"
        android:layout_marginLeft="@dimen/px20dp"
        android:gravity="center"
        android:textSize="16sp"
        />
</RelativeLayout>