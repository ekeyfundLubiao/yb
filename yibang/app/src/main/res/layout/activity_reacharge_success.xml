<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundeaeaea">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar2"></include>

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px724dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="@dimen/px30dp"
        android:layout_marginRight="@dimen/px30dp"
        android:background="@mipmap/me_cz_bg">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/px114dp"
            android:layout_height="@dimen/px114dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px78dp"

            android:src="@mipmap/me_cz_czcg" />

        <TextView
            android:id="@+id/tv_czcg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px44dp"
            android:text="充值成功"
            android:textColor="@color/coloBlack"
            android:textSize="@dimen/fontSize18" />

        <TextView
            android:id="@+id/tv_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_czcg"
            android:layout_marginLeft="@dimen/px54dp"
            android:layout_marginRight="@dimen/px54dp"
            android:layout_marginTop="@dimen/px44dp"
            android:background="@drawable/xx"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_zffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line1"
            android:layout_marginLeft="@dimen/px54dp"
            android:layout_marginTop="@dimen/px26dp"
            android:text="支付方式"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/fontSize12" />

        <TextView
            android:id="@+id/tv_zffs_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_line1"
            android:layout_marginRight="@dimen/px54dp"
            android:layout_marginTop="@dimen/px26dp"
            android:text="微信支付"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/fontSize12" />


        <TextView
            android:id="@+id/tv_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zffs"
            android:layout_marginLeft="@dimen/px54dp"
            android:layout_marginRight="@dimen/px54dp"
            android:layout_marginTop="@dimen/px26dp"
            android:background="@drawable/xx"
            android:layerType="software" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px64dp"
            android:text="实际支付"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/fontSize12" />

        <TextView
            android:id="@+id/tv_sjzf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tag"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/px78dp"
            android:layout_marginTop="@dimen/px24dp"
            android:text="¥1200.59"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/fontSize18" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_comlete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:layout_below="@+id/rl_back"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/px60dp"
        android:layout_marginRight="@dimen/px60dp"
        android:layout_marginTop="@dimen/px94dp"
        android:background="@drawable/round_button_border_yellow_deep"
        android:text="完成"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

</RelativeLayout>