<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundeaeaea">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar2"></include>

    <RelativeLayout
        android:id="@+id/rl_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_zfcg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/px34dp"
            android:text="订单支付成功"
            android:textColor="@color/colorText333333"
            android:textSize="@dimen/fontSize14" />

        <ImageView
            android:layout_width="@dimen/px34dp"
            android:layout_height="@dimen/px34dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_zfcg"
            android:src="@mipmap/me_ye_cg" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tag2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_tag"
        android:layout_marginTop="@dimen/px22dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/tv_zfxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px40dp"
            android:paddingLeft="@dimen/px30dp"
            android:paddingTop="@dimen/px30dp"
            android:text="您的支付信息"
            android:textColor="@color/colorText333333"
            android:textSize="@dimen/fontSize14" />

        <TextView
            android:id="@+id/tv_ddje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_zfxx"
            android:layout_marginLeft="@dimen/px30dp"
            android:text="订单金额：￥5000.00"
            android:textColor="@color/colorText333333"
            android:textSize="@dimen/fontSize12" />

        <TextView
            android:id="@+id/tv_ddbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ddje"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_marginTop="@dimen/px20dp"
            android:text="订单编号：5234525342152512324215252532521234"
            android:textColor="@color/colorText333333"
            android:textSize="@dimen/fontSize12" />

        <TextView
            android:id="@+id/tv_zffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ddbh"
            android:layout_marginBottom="@dimen/px30dp"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_marginTop="@dimen/px20dp"
            android:text="支付方式：微信支付"
            android:textColor="@color/colorText333333"
            android:textSize="@dimen/fontSize12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tag3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_tag2"
        android:layout_marginTop="@dimen/px22dp"
        android:background="@color/colorWhite">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdv_headIcon"
            android:layout_width="@dimen/px66dp"
            android:layout_height="@dimen/px66dp"
            android:layout_marginBottom="@dimen/px34dp"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_marginTop="@dimen/px34dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:failureImage="@drawable/error"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/loading"
            fresco:progressBarImage="@drawable/loading"
            fresco:progressBarImageScaleType="centerInside"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sdv_headIcon"
            android:layout_alignTop="@id/sdv_headIcon"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_toRightOf="@+id/sdv_headIcon"
            android:gravity="center"
            android:text="小悦悦手绘工作室旗舰店"
            android:textColor="@color/colorText333333"
            android:textSize="@dimen/fontSize14" />

        <TextView
            android:id="@+id/tv_gz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px30dp"
            android:text="关注"
            android:textColor="@color/colorText666666"
            android:textSize="@dimen/fontSize10" />

        <ImageView
            android:id="@+id/iv_gz"
            android:layout_width="@dimen/px48dp"
            android:layout_height="@dimen/px48dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px10dp"
            android:layout_toLeftOf="@+id/tv_gz"
            android:src="@mipmap/me_ye_xz_pre" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_tag3"
        android:layout_marginTop="@dimen/px50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ckdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_marginRight="@dimen/px50dp"
            android:layout_weight="1"
            android:background="@drawable/right_round_button_gray_border"
            android:gravity="center"
            android:padding="@dimen/px20dp"
            android:text="查看订单" />

        <TextView
            android:id="@+id/tv_fhsy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px50dp"
            android:layout_marginRight="@dimen/px80dp"
            android:layout_weight="1"
            android:background="@drawable/right_round_button_gray_border"
            android:gravity="center"
            android:padding="@dimen/px20dp"
            android:text="返回首页" />

    </LinearLayout>

</RelativeLayout>